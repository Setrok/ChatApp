<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/message_single_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_text_bg"
        android:padding="8dp"
        android:text="Message"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_single_user_time" />

    <TextView
        android:id="@+id/message_single_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:52"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:id="@+id/message_single_user_imageView"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="4dp"
        android:maxHeight="200dp"
        android:maxWidth="200dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_single_user_time">

        <ImageView
            android:id="@+id/message_single_user_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/jack"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/message_single_user_time" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>